{
  // ==================== GitHub Copilot ====================
  // Enable Copilot for specific file types (disable for plaintext and scminput)
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "json": true,
    "jsonc": true,
    "scminput": false
  },
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    ".guide/": true
  },
  // Use instructions from .github/copilot-instructions.md
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  // Temperature controls randomness: 0 = deterministic (best for code), 1 = creative
  "github.copilot.chat.agent.temperature": 0.2,
  // Include current editor context in suggestions
  "github.copilot.chat.agent.currentEditorContext.enabled": true,
  // Enable new Responses API for better performance
  "github.copilot.chat.useResponsesApi": true,
  // Use project templates for scaffolding
  "github.copilot.chat.useProjectTemplates": true,
  // Enable inline edit suggestions
  "github.copilot.nextEditSuggestions.enabled": true,
  // Show suggestions for code fixes
  "github.copilot.nextEditSuggestions.fixes": true,
  // Enable code review agent
  "github.copilot.chat.reviewAgent.enabled": true,
  // Enable test generation
  "github.copilot.chat.setupTests.enabled": true,

  // ==================== Files & Search ====================
  "files.exclude": {
    "**/.git": true,
    "**/.idea": false,
    "**/.gradle": false,
    "**/.mcreator": false,
    "**packages/minecraft-resources/dev/**/build/**": true,
    "**/.eslintcache": true,
    "**/node_modules": true
  },
  "json.schemaDownload.enable": true,
  // ==================== ESLint ====================
  "eslint.debug": false,
  "eslint.trace.server": "off",
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.options": {
    "cache": true,
    "cacheLocation": ".eslintcache"
  },

  // ==================== Editor ====================
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "off"
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "off"
    }
  },
  // ==================== TypeScript ====================
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.log": "off",
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.includeCompletionsForImportStatements": false,
  "java.compile.nullAnalysis.mode": "disabled",

  "[ignore]": {}
}
