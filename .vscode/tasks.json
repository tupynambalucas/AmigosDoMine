{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸ”¨ Build AmigosPlugin",
      "type": "shell",
      "command": "./gradlew shadowJar",
      "options": {
        "cwd": "${workspaceFolder}/resources/amigosplugin"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "ðŸŽ¨ Build ResourcePack",
      "type": "shell",
      "command": "./gradlew build",
      "options": {
        "cwd": "${workspaceFolder}/resources/resourcepack"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "ðŸ¤– Gemini CLI",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "powershell",
        "-WorkingDirectory",
        "'${workspaceFolder}'",
        "-ArgumentList",
        "'-Command $Host.UI.RawUI.WindowTitle = \"Gemini Agent\"; gemini --include-directories .'"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "ðŸŽ® Minecraft Server",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "powershell",
        "-WorkingDirectory",
        "'${workspaceFolder}'",
        "-ArgumentList",
        "'-NoExit -Command $Host.UI.RawUI.WindowTitle = \"Minecraft Server\"; docker compose up -d --build minecraft; docker compose attach minecraft'"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    }
  ]
}
