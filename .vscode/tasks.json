{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸš€ Build AmigosPlugin",
      "type": "shell",
      "command": "./gradlew shadowJar",
      "options": {
        "cwd": "${workspaceFolder}/packages/minecraft-resources/dev/amigos-plugin"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$scalac"]
    },

    {
      "label": "ðŸš€ Gemini CLI",
      "type": "shell",
